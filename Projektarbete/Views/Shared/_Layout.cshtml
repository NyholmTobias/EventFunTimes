<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projektarbete</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projektarbete.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid" style="display:flex; justify-content:center;">
                <h1 class="navbar-brand" style="justify-content:center"> Super Fun Times</h1>
            </div>
        </nav>
    </header>
    <div class="container">
        <div class="page" style="display: flex; flex-direction: column; justify-content: space-between; align-items: center; min-height: 80vh;">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
            <div class="container" style="display: flex; align-self:flex-end;">
            &copy; @DateTime.Now.Year Projektarbete
            </div>
        </div>
       
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
