@model IEnumerable<EventFunTimesUI.Models.EventResponse>

<div class="container">  
    @if(Model != null & Model.Count() != 0)
    {
        <h1 style="margin-bottom: 5%; margin-top: -10px;">Check these activities out!</h1>
        @foreach(var Event in Model)
        {
            <a href=@Event.Link class="card"> 
                <h1>@Event.Title</h1>
            </a> 
        }
    }
    else
    {
        <h1>There are no suitable events available right now :( Try again later!</h1>
    }
    
</div>

<style>
.container
{
    margin-top:20px;
    display: flex;
    flex-direction: column;
    justify-items: center;
    justify-content: space-evenly;
}
.card
{
    text-decoration: none;
    border: 1px solid grey;
    box-shadow: 2px 2px lightgrey;
    margin-bottom: 20px;
    padding: 20px;
    border-radius: 5px;
    color: black;
}
a 
{
    color: black;
    text-decoration: none;
}
a:hover
{
    background-color: grey;
    color: black;
}
</style>
